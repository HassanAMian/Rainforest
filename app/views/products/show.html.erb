<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
	<%= image_tag @product.avatar.url(:medium) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>

<%= link_to shopping_cart_path(:product_id => @product), :method => 'POST' do %>

<button type="button" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>  Add to Cart</button>

<%end%>


<h3>Reviews</h3>
<% @product.reviews.each do |review| %>
<p>
	<%= review.comment %>
	<br>
	Added: <%= time_ago_in_words review.created_at %> ago
</p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
