<h1>All Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.avatar.url(:thumb) %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
        <td><%= link_to product do %><button type="button" class="btn btn-default">Product Details</button><%end%></td>
        <td><%= link_to shopping_cart_path(:product_id => @product), :method => 'POST' do %><button type="button" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>  Add to Cart</button><%end%></td>
        <td><%= link_to product, method: :delete do%><i class="fa fa-trash-o"></i><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
