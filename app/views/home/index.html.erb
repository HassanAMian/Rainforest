<div class="row">

            <div class="col-md-3">
                <p class="lead">Welcome to the Jungle</p>
                <div class="list-group">
                    <a href="#" class="list-group-item">Men</a>
                    <a href="#" class="list-group-item">Women</a>
                    <a href="#" class="list-group-item">Baby</a>
                    <a href="#" class="list-group-item">Home</a>
                    <a href="#" class="list-group-item">Office</a>
                    <a href="#" class="list-group-item">Automotive</a>
                    <a href="#" class="list-group-item">Industrial</a>
                    <a href="#" class="list-group-item">Camping</a>
                    <a href="#" class="list-group-item">Sports</a>
                    <a href="#" class="list-group-item">Electronics</a>
                    <a href="#" class="list-group-item">Media</a>
                    <a href="#" class="list-group-item">Travel</a>
                    <a href="#" class="list-group-item">Accessories</a>
                    <a href=<%=products_path%> class="list-group-item">All Products</a>
                </div>
            </div>

            <div class="col-md-9">

                <div class="row carousel-holder">

                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class=""></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2" class="active"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img class="slide-image" src=<%= asset_path ('Welcome1.jpg')%> alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src=<%= asset_path ('Welcome2.jpg')%> alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src=<%= asset_path ('Welcome3.jpg')%> alt="">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>

                <div class="row">
                  <% @products.each do |product| %>

                    <div class="col-sm-4 col-lg-4 col-md-4">
                  
                          <%= link_to product do %>
                          <div class="thumbnail">
                            <img src=<%=product.avatar.url(:medium)%>alt="">
                            <div class="caption">
                             
                                <h4><%= product.name %></h4>
                                
                            </div>
                            <div class="ratings">
                              <p class="pull-right"><%=product.reviews.length%> reviews</p>
                              <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                              </p>
                            </div>
                         <h5><%= product.formatted_price %></h5>
                        </div>
                        
                      <% end %>
                        
                    </div>
                  <% end %>

                  
            </div>
        </div>